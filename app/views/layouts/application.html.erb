<!DOCTYPE html>
<html>
  <head>
    <title>Quarantine Stories</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="d-flex nav top-nav">
        <ul>
          <li><%= link_to image_tag("logo/logonav.png",  alt: "Logo"), root_path , class:  "logo" %></li>
        </ul>
        <ul class="d-flex">
          <li><%= link_to "Home", root_path %></li>
          <% all_categories.each do |cat|  %>
            <li> <%= link_to cat.name, category_path(cat)%> </li>
          <% end if !all_categories.empty? %>
          <% if all_categories.size > 6 %>
            <li> <%= link_to "All Categories", category_index_path%> </li>
          <% end %>
        </ul>
        <ul class="d-flex">
        <% if logged_in? %>
          <li> <%=  link_to current_user.name.capitalize,  root_path%> </li>
          <li><%= link_to "Logout", logout_path %></li>
        <% else %>
          <li> <%= link_to "Sign in", login_path %> </li> |
          <li> <%= link_to "Sign up", signup_path %> </li>
        <% end %>
          <li><%= link_to image_tag("search.svg"), "#",  class: "search" %></li>
        </ul>
      </nav>
    </header>
    <% flash.each do |name, msg| %>
      <% if notice.present? %>
        <div class="notice">
          <p> <%= msg %> </p>
        </div>
      <% elsif alert.present? %>
        <div class="alert">
          <p> <%= msg %> </p>
        </div>
      <% end %>
    <% end if !flash.empty? %>
    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="nav d-flex">
        <ul>
          <li><%= link_to "Quarantine Stories", root_path , class:  "logo" %></li>
        </ul>
        <div class="d-flex">
          <ul class="d-flex">
            <li>
              <a href="#">Privacy Policy</a>
            </li>
            <li>
              <a href="#">Terms and conditions</a>
            </li>
          </ul>
          <span>Copyright &copy;2020. All rights reserved</span>
        </div>
        <div class="d-flex">
          <span>Connect with us:</span>
          <ul class="d-flex">
            <li><%= link_to image_tag("twitter.svg",  alt: "Twitter Icon"), root_path , class:  "social" %></li>
            <li><%= link_to image_tag("instagram-sketched.svg",  alt: "Instagram Icon"), root_path , class:  "social" %></li>
            <li><%= link_to image_tag("facebook.svg",  alt: "Facebook Icon"), root_path , class:  "social" %></li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
